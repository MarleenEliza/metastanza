{
  "stackedBarJson": 
  {
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "data": [
      {
        "transform": [
          {
            "type": "stack"
          }
        ]
      }
    ],

    "scales": [
      {
        "name": "x",
        "type": "band",
        "range": "width",
        "domain": {"data": "table", "field": "x"}
      },
      {
        "name": "y",
        "type": "linear",
        "range": "height",
        "nice": true,
        "zero": true,
        "domain": {"data": "table", "field": "y1"}
      },
      {
        "name": "color",
        "type": "ordinal",
        "range": [
          "var(--series-0-color)",
          "var(--series-1-color)",
          "var(--series-2-color)",
          "var(--series-3-color)",
          "var(--series-4-color)",
          "var(--series-5-color)"
        ],
        "domain": {"data": "table", "field": "c"}
      }
    ],



    "marks": [
      {
        "type": "rect",
        "from": {"data": "table"},
        "encode": {
          "enter": {
            "x": {"scale": "x", "field": "x"},
            "width": {"scale": "x", "band": 1, "offset": -1},
            "y": {"scale": "y", "field": "y0"},
            "y2": {"scale": "y", "field": "y1"},
            "fill": {"scale": "color", "field": "c"}
          },
          "update": {
            "fillOpacity": {"value": 1}
          },
          "hover": {
            "fillOpacity": {"value": 0.5}
          }
        }
      }
    ]
  }
}